@model wcfmotoklub.tblLogin

@{
    ViewBag.Title = "Edit";
}

<h2 class="naslov">IZMENI NALOG</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display:none;">
            @Html.LabelFor(model => model.LoginID, htmlAttributes: new { @class = "control-label col-md-2 col-xs-2" })
            <div class="col-md-10 col-xs-10">
                @Html.EditorFor(model => model.LoginID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LoginID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">KORISNIČKO IME</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.TextBoxFor(model => model.Username, new
           {
               @class = "form-control",
               @maxlength = "30",
               @minlength = "5",
               data_val = "true"
           })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">ŠIFRA</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.TextBoxFor(model => model.Password, new
           {
               @class = "form-control",
               @maxlength = "15",
               @minlength = "3",
               data_val = "true"
           })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SAČUVAJ" class="btn btn-danger btn-width1" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-danger btn-width" onclick="location.href='@Url.Action("Index", "Home")'">NAZAD</button>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
