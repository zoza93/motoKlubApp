@model wcfmotoklub.tblLogin

@{
    ViewBag.Title = "Add";
}

<h2 class="naslov">NAPRAVI NALOG</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">KORISNIČKO IME</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.EditorFor(model => model.Username, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   @maxlength = "30",
                   @minlength = "5",
                   data_val = "true",
                   data_val_regex = "Dužina unosa mora biti između 5 i 30 karaktera"
               }
           })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">ŠIFRA</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.EditorFor(model => model.Password, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   @maxlength = "15",
                   @minlength = "3",
                   data_val = "true",
                   data_val_regex = "Dužina unosa mora biti između 3 i 15 karaktera"
               }
           })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="KREIRAJ" class="btn btn-danger btn-width1" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-danger btn-width" onclick="location.href='@Url.Action("Index", "MemberList")'">NAZAD</button>
</div>
