@model IEnumerable<MotoKlubASP.Models.LoginWithOwner>

@{
    ViewBag.Title = "ShowAll";
}


<div style="color:white;padding:5px; width:211px; margin-left:auto; margin-right:auto;text-align: center;">
    <h2 class="naslov">SVI NALOZI</h2>
    <p>
        @using (Html.BeginForm("ShowAll", "Login", FormMethod.Get))
        {
            @Html.TextBox("search")<input type="button" value="X" class="clear-btn" /><br />
            <input type="submit" value="TRAŽI" class="btn btn-danger" style="margin-top:5px;" />
        }
    </p>
</div>
    <table class="table color-white" style="width:200px;margin-left:auto;margin-right:auto; border:2px solid white;" id="grad2">
        @foreach (var item in Model)
        {
            <tr>
                <td class="nodisplay">
                    @Html.DisplayFor(modelItem => item.LoginID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>

                    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Login", new { LoginID = item.LoginID })'">X</button>
                </td>
            </tr>
        }

    </table>
