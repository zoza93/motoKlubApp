@model wcfmotoklub.tblMember

@{
    ViewBag.Title = "Add2";
}

<h2 class="naslov">DODELI</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">ČLAN</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.DropDownList("MemberID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">NALOG</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.DropDownList("LoginID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LoginID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="DODELI" class="btn btn-danger btn-width1" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-danger btn-width" onclick="location.href='@Url.Action("Index", "MemberList")'">NAZAD</button>
</div>
