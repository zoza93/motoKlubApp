@model wcfmotoklub.tblBike

@{
    ViewBag.Title = "Create";
}

<h2 class="naslov">DODAJ NOVI MOTOR *ADMIN*</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal color-white">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group nodisplay">
            @Html.LabelFor(model => model.BikeID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BikeID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BikeID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">MARKA</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.EditorFor(model => model.Brand, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   @maxlength = "50",
                   @minlength = "3",
                   required = "required"
               }
           })
                @Html.ValidationMessageFor(model => model.Brand, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">MODEL</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", @maxlength = "50", @minlength = "3" } })
                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">GODIŠTE</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.EditorFor(model => model.Year, new
           {
               htmlAttributes = new
               {
                   @class = "form-control",
                   @maxlength = "4",
                   @minlength = "4",
                   @max = DateTime.Now.Year,
                   @min = "1900",
                   data_val = "true",
                   data_val_regex = "Godina moze sadrzati samo brojeve",
                   data_val_regex_pattern = @"^[0-9]*$"
               }
           })
                @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2 col-xs-2">
                <p class="edit-myprofile">VLASNIK</p>
            </div>
            <div class="col-md-10 col-xs-10">
                @Html.DropDownList("MemberID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="DODAJ" class="btn btn-danger btn-width1" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-danger btn-width" onclick="location.href='@Url.Action("Index", "Bike")'">NAZAD</button>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
