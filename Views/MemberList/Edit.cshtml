@model wcfmotoklub.tblMember

@{
    ViewBag.Title = "Edit";
}

<h2 style="color:#d43f3a">Izmena *ADMIN*</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
